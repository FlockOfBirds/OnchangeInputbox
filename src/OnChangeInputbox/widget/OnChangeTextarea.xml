    <properties>
        <property key="entity" type="entity" required="true">
            <caption>Entity</caption>
            <category>Data source</category>
            <description>The entity of the attribute to display</description>
        </property>
        <property key="attr" type="attribute" required="true">
            <caption>Attribute</caption>
            <category>Data source</category>
            <description>The attribute to display</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="onChangeEvent" type="enumeration" defaultValue="callMicroflow">
            <caption>OnChange event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="microflow" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Events</category>
            <description>The microflow to execute whenever input text changes</description>
            <returnType type="Void"/>
        </property>
        <property key="nanoflow" type="nanoflow" required="false">
            <caption>Nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow to execute whenever input text changes</description>
            <returnType type="Void"/>
        </property>
        <property key="delay" type="integer" required="true" defaultValue="0">
            <caption>Delay</caption>
            <category>Behavior</category>
            <description>Delay before first on change microflow/nanoflow is triggered in milliseconds</description>
        </property>
        <property key="chartreshold" type="integer" required="true" defaultValue="0">
            <caption>Character threshold</caption>
            <category>Behavior</category>
            <description>Minimum character threshold before the on change microflow/nanoflow is triggered</description>
        </property>
        <property key="placeholder" type="string" required="false">
            <caption>Placeholder text</caption>
            <category>General</category>
            <description/>
        </property>
        <property key="maxLength" type="integer" required="true" defaultValue="0">
            <caption>Maximum length</caption>
            <category>General</category>
            <description/>
        </property>
        <property key="rows" type="integer" required="true" defaultValue="0">
            <caption>Number of lines</caption>
            <category>General</category>
            <description/>
        </property>
        <property key="textTooLongMsg" type="string" required="false">
            <caption>Text too long message</caption>
            <category>General</category>
            <description/>
        </property>
        <property key="counterMsg" type="integer" required="true" defaultValue="0">
            <caption>Counter message</caption>
            <category>General</category>
            <description/>
        </property>
    </properties>
</widget>
